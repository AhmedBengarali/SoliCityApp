<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/background"
    android:focusableInTouchMode="true"
    android:gravity="center"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    tools:context=".ui.HomePage">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="188dp"
        android:layout_height="213dp"
        android:layout_marginBottom="60dp"
        android:src="@drawable/solicity_logo"
        app:layout_constraintBottom_toTopOf="@+id/Ben_frag"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
        android:id="@+id/Ben_frag"
        style="@style/loginButton"
        android:layout_width="225dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="40dp"
        android:background="@drawable/login_button_bk"
        android:text="Gestion des Bénéficiaires"
        android:textAlignment="center"
        app:initialCornerAngle="48dp"
        app:layout_constraintBottom_toTopOf="@+id/product_frag"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:spinning_bar_color="#FFF"
        app:spinning_bar_padding="6dp"
        app:spinning_bar_width="4dp" />

    <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
        android:id="@+id/product_frag"
        style="@style/loginButton"
        android:layout_width="225dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="40dp"
        android:background="@drawable/login_button_bk"
        android:text="Gestion des Produits "
        android:textAlignment="center"
        app:initialCornerAngle="48dp"
        app:layout_constraintBottom_toTopOf="@+id/donee_frag"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:spinning_bar_color="#FFF"
        app:spinning_bar_padding="6dp"
        app:spinning_bar_width="4dp" />

    <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
        android:id="@+id/donee_frag"
        style="@style/loginButton"
        android:layout_width="225dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="164dp"
        android:background="@drawable/login_button_bk"
        android:text="Gestion des Dons"
        android:textAlignment="center"
        app:initialCornerAngle="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:spinning_bar_color="#FFF"
        app:spinning_bar_padding="6dp"
        app:spinning_bar_width="4dp" />


</androidx.constraintlayout.widget.ConstraintLayout>