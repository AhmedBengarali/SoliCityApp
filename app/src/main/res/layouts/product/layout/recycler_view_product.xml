<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="27dp"
            android:layout_toStartOf="@id/layout_options_prod"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/textViewProdName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textColor="#000000"
                android:textSize="20sp"
                tools:text="Pâtes" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/textViewProdName">

                <TextView
                    android:id="@+id/text_view_quant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="2dp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    tools:text="Quantité :" />

                <TextView
                    android:id="@+id/text_view_prod_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="5dp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    tools:text="10" />
                <TextView
                    android:id="@+id/text_view_prod_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="1dp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    tools:text="Kg" />
                </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layout_options_prod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/button_edit_prod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:background="@drawable/ic_edit" />

            <ImageButton
                android:id="@+id/button_Delete_prod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:background="@drawable/ic_delete" />
        </LinearLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e9e9e9" />

</LinearLayout>